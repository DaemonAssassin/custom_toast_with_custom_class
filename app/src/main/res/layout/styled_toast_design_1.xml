<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/styled_toast_background_shape"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_toast_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
        android:contentDescription="@string/toast_image" />

    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/hello_to_my_android_app"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_toast_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_toast_icon"
        app:layout_constraintTop_toTopOf="@id/iv_toast_icon" />

    <ImageView
        android:id="@+id/iv_toast_icon1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_toast_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_toast_icon"
        app:layout_constraintStart_toEndOf="@id/tv_toast"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
        android:contentDescription="@string/toast_image" />
</androidx.constraintlayout.widget.ConstraintLayout>